#include<iostream>
using namespace std;
int main(){
    int ch;
    float a,b,c;
    
    cout << "Please choose your option:"
           "\n1 = Addition"
           "\n2 = Subtraction"
           "\n3 = Multiplication"
           "\n4 = Division"
           "\n5 = Squares"
           "\n6 = exit"
           "\n\nChoice: ";
   cin >> ch;
   
   cout<<"Please enter two numbers:-";
   cin>>a>>b;
 
    while(ch < 1 || ch > 6)
   {
      cout << "\nPlease choose from the above options:-";
      cin >> ch;
   }
   
    switch(ch){
        
        case 1:
        c=a+b;
        cout<<"Sum="<<c;
        break;
        
        case 2:
        c=a-b;
        cout<<"Difference="<<c;
        break;
        
        case 3:
        c=a*b;
        cout<<"Product="<<c;
        break;
        
        case 4:
        c=a/b;
        cout<<"Quotient="<<c;
        break;
        
        case 5:
        c=a+b;
        cout<<"Reminder="<<c;
        break;
        
        case 6:
         return 0;
        
    }

}
