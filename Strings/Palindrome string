#include <iostream>
#include<cstring>
using namespace std;

int main(){
    char string[20];
    int i, len;
    int check=0;
    
    cout << "Enter a string: "; cin >> string;
    
    len= strlen(string);
    
    for(i=0;i<len ;i++){
        if(string[i] != string[len-i-1]){
            check=1;
            break;
           }
        }
    
    if (check==1) {
        cout << string<< " is not a palindrome" << endl; 
    }    
    else {
        cout << string << " is a palindrome" << endl; 
    }
    return 0;
}
